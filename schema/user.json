{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "uid": {
      "type": "integer"
    },
    "login_name": {
      "type": "string",
      "description": "if show_login_name is false, this field is not available"
    },
    "nickname": {
      "type": "string"
    },
    "show_login_name": {
      "type": "bool"
    },
    "public_key": {
      "type": "string",
      "description": "base64"
    }
  },
  "required": [
    "uid",
    "nickname",
    "show_login_name"
  ]
}